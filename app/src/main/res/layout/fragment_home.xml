<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground"
    tools:context=".homeFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Completion"
        android:textColor="@color/lavender"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- ProgressBar Container -->
    <FrameLayout
        android:id="@+id/progressContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/homeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <ProgressBar
            android:id="@+id/circularProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/shape_circular_progress"
            android:background="@drawable/shape_circle_background" />

        <TextView
            android:id="@+id/percentageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/lavender"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Reminder Status -->
    <TextView
        android:id="@+id/reminderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed 0 of 0 reminders"
        android:textColor="@color/lavender"
        android:textSize="16sp"
        android:layout_below="@id/progressContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- User Info Section -->
    <LinearLayout
        android:id="@+id/userInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/reminderStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18sp"
            android:textColor="@color/lavender" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="18sp"
            android:textColor="@color/lavender" />

        <TextView
            android:id="@+id/numberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="18sp"
            android:textColor="@color/lavender" />

        <TextView
            android:id="@+id/lastMedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Medicine: "
            android:textSize="18sp"
            android:textColor="@color/lavender" />

        <TextView
            android:id="@+id/lastTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Time: "
            android:textSize="18sp"
            android:textColor="@color/lavender" />
    </LinearLayout>

</RelativeLayout>
